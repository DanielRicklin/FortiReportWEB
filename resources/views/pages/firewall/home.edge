                                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                        {{firewall.name}}
                                    </th>
                                    <th scope="row" class="px-6 py-4">
                                        {{company.name}}
                                    </th>
                                    <td scope="row" class="px-6 py-4">
                                        {{firewall.ip}}
                                    </td>
                                    <td scope="row" class="px-6 py-4">
                                        {{firewall.port}}
                                    </td>
